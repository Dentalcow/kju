<Window
    x:Class="kju.VideoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Media Playback">
    <Grid>
        <MediaPlayerElement x:ConnectionId='2' x:Name="VideoPlayer" AutoPlay="True" Stretch="Uniform" x:FieldModifier="public" />
        <Image x:ConnectionId='3' x:Name="ImageDisplay" Stretch="Uniform" Visibility="Collapsed" x:FieldModifier="public" />
    </Grid>
</Window>

